{
  "name": "template-next-auth-js",
  "author": "@john-nhoj",
  "license": "MIT",
  "version": "1.0.0",
  "engines": {},
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "dependencies:check": "ncu",
    "dependencies:update": "ncu -u",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "knex:migrate:make": "knex migrate:make -x ts",
    "knex:migrate:latest": "NODE_ENV=development knex migrate:latest",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:css": "stylelint \"./**/*.{css,ts,tsx}\"",
    "lint:fix": "eslint --max-warnings=0 --ext .ts,.tsx,.js --fix .",
    "prepare": "husky install",
    "prepush": "npm run type-check && npm run lint",
    "test-all": "yarn lint && yarn type-check"
  },
  "dependencies": {
    "mongodb": "^3.6.9",
    "next": "^10.2.3",
    "next-auth": "^3.26.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@testing-library/react": "^11.2.7",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "autoprefixer": "^10.2.6",
    "classnames": "^2.2.6",
    "dotenv": "^8.6.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "npm-check-updates": "^11.6.0",
    "postcss": "^8.3.1",
    "prettier": "^2.3.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^2.1.4",
    "typescript": "^4.3.2"
  }
}
